#include <stdio.h>



int main()

{

  int num1, elevado;

  printf("digite um número:");

  scanf ("%i", &num1);



  elevado = num1 * num1;

  printf("o numero %i elevado a 2 é: %i",num1, elevado);  



  return 0;

}
