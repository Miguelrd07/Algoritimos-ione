#include <stdio.h>



int main()

{

  int num1, num2, soma , subtração;

  printf("digite o primeiro numero:");

  scanf ("%i", &num1);

  printf("digite o segundo numero:");

  scanf ("%i", &num2);

   

  soma = num1 + num2;

  printf("a Soma dos dois é: %i + %i = %i\n", num1, num2, soma);

   

  subtração = num1 - num2;

  printf("a subtração dos dois é: %i - %i = %i", num1, num2, subtração);



  return 0;

}



