#include <stdio.h>



int main()

{

  int num1, num2, soma , média;

  printf("digite o primeiro numero:");

  scanf ("%i", &num1);

  printf("digite o segundo numero:");

  scanf ("%i", &num2);

   

  soma = num1 + num2;



  média = soma / 2;

   

  printf("a média do aluno é: %i", média);



  return 0;

}



3.

}#include <stdio.h>



int main()

{

  int num1 = 0, antecessor, sucessor;

  printf("digite um número:");

  scanf ("%i", &num1);



  antecessor = num1 - 1;



  sucessor = num1 + 1;

   

  printf("o sucessor é %i o antecessor de é %i", sucessor, antecessor);



  return 0;

}



